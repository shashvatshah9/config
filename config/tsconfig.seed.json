{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": false,
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "jsx": "react",
        "keyofStringsOnly": true,
        "lib": ["DOM", "ES2018"],
        "module": "esnext",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "target": "es5"
    }
}